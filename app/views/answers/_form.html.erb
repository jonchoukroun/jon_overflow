<%= form_for(@answer,
            url: question_answers_path(@question.id),
            method: :post,
            html: {class: 'answer-form hidden'},
            remote: true) do |f| %>

  <div class="form-title">
    <h2>Your answer</h2>
  </div><!-- /.form-title -->

  <div class="error-messages"></div><!-- /.error-messages -->

  <div class="form-group">
    <%= f.text_area :content, class: 'input-lg',
      placeholder: 'Be descriptive, what would you want to know?',
      autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label 'Add an image' %>
    <%= f.file_field :avatar,
      accept: 'image/png,image/gif,image/jpg,image/jpeg',
      id: 'uploadAvatar',
      class: 'input-lg image-upload' %>
  </div>

  <div class="form-group">
  <%= f.submit 'Answer', 
    class: 'btn btn-primary btn-lg submit submit-answer' %>
  </div>

  <div class="form-group">
  <%= link_to 'Cancel', '#',
    class: 'btn btn-primary btn-lg btn-block cancel cancel-answer',
    remote: true %>
  </div>
  
<% end %>
