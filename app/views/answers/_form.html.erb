<%= form_for(@answer,
            url: question_answers_path(@question.id),
            method: :post,
            html: {class: 'answer-form form-inline hidden'},
            remote: true) do |f| %>

  <div class="error-messages"></div>

  <div class="form-group">
  <%= f.label :content, "Your answer" %>
  <%= f.text_area :content, class: 'input-lg', autofocus: true %>
  </div>

  <div class="form-group">
  <%= f.submit 'Answer', 
    class: 'btn btn-primary btn-lg submit-answer' %>
  </div>

  <div class="form-group">
  <%= link_to 'Cancel', '#',
    class: 'btn btn-default btn-lg cancel-answer',
    remote: true %>
  </div>
  
<% end %>
