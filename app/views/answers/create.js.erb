var index = $('.answers-index');

$(index).prepend(
  "<%= j(render 'answers/answer', answer: @answer) %>"
);

locateAnswer = function() {
  var target = $(index).find('.full-answer').first();

  // Allow unique styling
  $(target).toggleClass('top-answer');

  // Get rid of form at bottom of page
  $('form.answer-form').toggleClass('hidden');

  // Smooth scroll to newly posted answer
  $('body').animate({
    scrollTop: $(target).offset().top
  }, 700);
};

locateAnswer();
