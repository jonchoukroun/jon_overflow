var target = $('.full-answer#<%= @answer.id %>').find('.vote-count');
var upButton = target.parent().find('a.agree');
var downButton = target.parent().find('a.disagree');
var num = parseInt(target.text());

downButton.removeClass('voted')

<% if @answer.vote_registered? %>
  upButton.addClass('voted');
  target.text(num + 1);
<% else %>
  upButton.addClass('voted');
<% end %>
