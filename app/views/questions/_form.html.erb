<%# Refactor using QuestionsHelper %>
<%= form_for(@question, url: questions_path, html: {class: 'hidden'}, remote: true) do |f| %>
  <div class="container error-messages"></div>
  <p><%= f.label :title %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  </p>
  <p>
  <%= select(:question, :user_id, @user) %>
  <%= select(:question, :category_id, @category) %>
  </p>
  <p>
  <%= f.submit 'Create', class: 'btn btn-primary submit-question' %>
  <%= link_to 'Cancel', '#', class: 'btn btn-default cancel-question' %>
  </p>

<% end %>
