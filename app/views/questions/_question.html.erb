<div class="row question-heading">
  <div class="col-sm-2 question-rating">
    <%# Id as placeholder, later count associated questions %>
    <h2 class="vote-count"><%= question.id %></h2>
  </div><!-- col-sm-2 question-rating -->

  <div class="col-sm-10 question-title">
    <h2><%= question.title %></h2>
  </div><!-- col-sm-10 question-title -->
</div><!-- row question-heading -->

<div class="row question-content">
  <div class="col-sm-10 col-sm-offset-2">
    <h4><%= question.content %></h4>
  </div><!-- col-sm-10 col-sm-offset-2 -->
</div><!-- row question-content -->

<div class="row">
  <div class="col-sm-4 col-sm-offset-8 user-action">
    <% if current_user && current_user.id == question.user_id %>
      <%= link_to 'Edit',
        edit_question_path(question),
        class: 'btn btn-info question-edit',
        remote: true %>

      <%= link_to 'Delete',
        question_path(question),
        class: 'btn btn-danger question-delete',
        method: :delete,
        data: {
          confirm: "Are you sure you want to delete: #{@question.title}?"
        },
        remote: true %>

    <% else %>
      <p>Asked by: <%= @user_name %></p>
      <p><%= local_time_ago(question.created_at) %></p>
    <% end %>
  </div><!-- col-sm-4 col-sm-offset-8 -->
</div><!-- row user-info -->
