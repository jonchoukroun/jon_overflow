<div class="row questions-nav">
  <div class="col-lg-2">
    <%# Handled in assets pipeline %>
    <%= link_to 'Ask a question', '#',
      class: 'btn btn-default new-question' %>
  </div><!-- /.col-lg-2 -->

  <div class="col-lg-2">
    <%# Return to categories list %>
    <%= link_to 'Back to counties', categories_path,
      class: 'btn btn-default back',
      remote: true %>
  </div><!-- /.col-lg-2 -->

  <div class="col-lg-8 question-search">
    <%= form_tag category_questions_path(@category),
      method: :get,
      class: 'input-group',
      remote: true do %>
          <%= search_field_tag :search, params[:search],
            placeholder: "e.g. best hiking, affordable sky-diving",
            class: 'form-control'%>
          <span class="input-group-btn">
            <%= submit_tag 'Find', name: nil,
              class: 'btn btn-default search' %>
          </span>
    <% end %>
  </div><!-- /.col-lg-8.input-group.question-search -->

</div><!-- /.row.questions-nav -->
