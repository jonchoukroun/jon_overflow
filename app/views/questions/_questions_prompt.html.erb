<div class="container-fluid question-prompt">
  <div class="row question-heading">
    <div class="col-sm-2 question-rating">
      <%# Id as placeholder, later count # associated questions %>
      <h3 class="vote-count"><%= question.id %></h3>
    </div><!-- col-sm-2 question-rating -->

    <div class="col-sm-10 question-title">
      <%= link_to "<h3>#{ question.title }</h3>".html_safe,
        question_path(question),
        remote: true %>
    </div><!-- col-sm-10 question-title -->
  </div><!-- row question-heading -->

  <div class="row question-preview">
    <div class="col-sm-6 col-sm-offset-2"><h4><%= question.preview %></h4></div>
  </div><!-- row question-preview -->

  <div class="row question-options">
    <div class="col-sm-4 col-sm-offset-8 question-show">
      <%= link_to 'Show',
        question_path(question),
        class: 'btn btn-default question-option',
        remote: true %>

      <% if current_user && current_user.id == question.user_id %>
        <%= link_to 'Edit',
          edit_question_path(question),
          class: 'btn btn-default question-option',
          remote: true %>

        <%= link_to 'Delete',
          question_path(question),
          class: 'btn btn-default question-option',
          method: :delete,
          data: { confirm: "Are you sure you want to delete: #{question.title}?" },
          remote: true %>
      <% end %>
    </div><!-- col-sm-4 col-sm-offset-8 question-options -->
  </div><!-- row question-option -->
</div><!-- container-fluid question-prompt -->
