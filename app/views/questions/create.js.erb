var index = $('.questions-index');

$(index).prepend(
  "<%= j(render 'questions/questions_prompt', question: @question) %>"
);

locateQuestion = function() {
  var target = $(index).find('.question-prompt').first()
  
  // Allow unique styling
  $(target).toggleClass('top-question');

  //Get rid of form at bottom of page
  $('form.question-form').toggleClass('hidden');

  $('html, body').animate({
    scrollTop: $('#content').offset().top - 50
  }, 500);
};

locateQuestion();
