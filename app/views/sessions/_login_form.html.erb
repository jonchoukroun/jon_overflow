<%= form_for(:session,
              url: login_path,
              html: {class: 'login-form'},
              remote: true) do |f| %>
            
  <div class="form-title">
    <h3>Log in</h3>
  </div><!-- /.form-title -->

  <div class="error-messages"></div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'input-lg', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'input-lg' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Log In', class: 'btn btn-primary btn-lg submit-login' %>
  </div>

  <%# Allow user to change form type %>
  <div class="form-group">
    <h3>New User?</h3>
    <%= link_to 'Create Profile',
      signup_path,
      class: 'btn btn-default btn-lg convert-form',
      remote: true %>

    <%= link_to 'Cancel Login', '#',
      class: 'btn btn-default btn-lg close-lightbox' %>
  </div>
<% end %>
