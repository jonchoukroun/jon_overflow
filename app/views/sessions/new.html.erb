<h1 class="form-title">Log In</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3 login-form">
    <%= form_for(:session,
                 url: login_path,
                 remote: true) do |f| %>
                 
      <div class="error-messages"></div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'input-lg', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'input-lg' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Log In', class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>

    <h3>New user?</h3>
    <%= link_to 'Create profile',
      signup_path,
      class: 'btn btn-default btn-lg signup-link' %>
  </div><!-- col-sm-6 col-sm-offset-3 login-form -->
</div><!-- row -->
