<%= form_for @user,
  url: '/users',
  remote: true do |f| %>

  <div class="form-title">
    <h3>Create an Account</h3>
  </div><!-- /.form-title -->

  <div class="error-messages"></div>

  <div class="form-group">
    <%= f.label :name, 'Display name' %>
    <%= f.text_field :name, class: 'input-lg', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'input-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'input-lg' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation, class: 'input-lg' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create account', class: 'btn btn-primary btn-lg' %>
  </div>

  <%# Allow user to change form type %>
  <div class="convert-form">
    <h4>Existing User?</h4>
    <%= link_to 'Login',
      login_path,
      class: 'btn btn-default btn-lg convert-form',
      remote: true %>
  </div><!-- /.convert-form -->

<% end %>
